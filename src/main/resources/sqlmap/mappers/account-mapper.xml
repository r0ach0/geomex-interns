<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper   PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="geomex.mappers.AccountMapper">
    <insert id="insert" parameterType="geomex.models.AccountVO">
        <![CDATA[
          INSERT INTO accounts VALUES (#{id}, #{password}, #{name});
        ]]>
    </insert>

    <select id="select" parameterType="geomex.models.AccountVO" resultType="geomex.models.AccountVO">
        <![CDATA[
            SELECT * FROM accounts WHERE id = #{id} AND password = #{password};
        ]]>
    </select>
</mapper>